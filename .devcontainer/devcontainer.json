{
  "name": "Dev Container for Gemini CLI",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3000],
  "mounts": [
    "source=gemini-config,target=/home/node/.gemini,type=volume"
  ],
  "postCreateCommand": "sudo chown node /home/node/.gemini && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}